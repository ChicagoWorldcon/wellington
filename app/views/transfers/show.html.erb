<h1>Transferring Membership: Confirm transfer</h1>
<section class="l-section">
  <div class="row">
    <div class="col-12 col-md-12">
      <div class="l-panel">
        <%= form_for(@transfer, method: :patch, url: update_transfer_url(@transfer)) do |f| %>
          <h2>#<%= @transfer.purchase.membership_number %> <%= @transfer.detail %></h2>
          <p>Transferring from <%= @transfer.from_user.email %></p>
          <p>Transferring to <%= @transfer.to_user.email %><p>

          <div class="form-options">
            <%= f.check_box(:copy_details, class: "form-control form-control-m-checkbox", id: "copy_details") %>
            <label for="copy_details">Keep membership details? This includes name, badge name, and address</label>
          </div>

          <fieldset class="l-v-spacing">
            <div class="row">
              <div class="col-12 col-md-6">
                <%= link_to "Go back to transfer list", new_purchase_transfer_path, class: "btn btn-m-full-width" %>
              </div>
              <div class="col-12 col-md-6">
                <input type="submit" value="Email users and transfer membership" class="btn btn-m-full-width">
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
