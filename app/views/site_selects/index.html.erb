    <%# </div> %>
  
<p>
  <b><%= link_to("Click here to pay for Site Selection", new_reservation_site_charge_path(@reservation)) %></b>

  </div>
</section>
  
  <% end %>

        </ul> 
      </div>
    </div>
  </div>
</section>


