<h1>Make a Payment towards Membership #<%= @reservation.membership_number %></h1>
<section class="l-section">
  <div class="row">
    <div class="col-12 col-lg-8">
      <div class="l-panel">
        <%= form_tag(charges_path, "id" => "charge-form", "data-stripe" => stripe_config(@reservation)) do %>
          <article>
            <div id="error_explanation"></div>

            <p>
              You need to pay <%= number_to_currency(@outstanding_amount / 100) %> <%= $currency %> to cover this
              membership. Please pay the full amount, or choose an installment from the list.
            </p>

            <label class="amount">
              <span>Amount:
                <%= select_tag(:amount, options_for_select(@price_options, selected: @outstanding_amount)) %>
              </span>
            </label>
          </article>

          <%= hidden_field_tag(:stripeToken) %>
          <%= hidden_field_tag(:stripeEmail) %>
          <%= hidden_field_tag(:reservation, @reservation.id) %>
          <div class="l-v-spacing-both">
            <div class="form-group">
              <%= submit_tag("Pay for #{@membership} membership", id: "reservation-button", class: "btn btn-m-full-width") %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-12 col-lg-4">
      <div class="l-v-spacing">
        <%= render("reservation_card", reservation: @reservation) %>
      </div>
    </div>
  </div>
</section>
