<h1>New Membership</h1>
<section class="l-section">
  <div class="row">
    <div class="col-12 col-md-8">
      <div class="l-panel">
        <h2>Sign Up</h2>

        <p>
          <% if user_signed_in? %>
            Logged in as <%= current_user.email %>. <%= link_to("Log out", logout_user_tokens_path) %>
          <% else %>
            <%= link_to("Log in", new_user_token_path) %>
          <% end %>
        </p>

        <% if flash[:error].present? %>
          <div id="error_explanation">
            <p><%= flash[:error] %></p>
          </div>
        <% end %>

        <%= form_tag(charges_path, html: { class: "form form-m-membership", id: "membership-form" }) do %>
          <article>
            <label class="amount">
              <span>Amount: $5.00</span>
            </label>
          </article>

          <script src="https://checkout.stripe.com/checkout.js"
            class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description="Payment"
            data-amount="500"
            data-locale="auto"></script>
        <% end %>
      </div>
    </div>
  </div>
</section>
