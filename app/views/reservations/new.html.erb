<h1>
  Reserve Membership
</h1>

<section class="l-section">
  <div class="row">
    <div class="col-12 col-lg-4">
      <div class="l-panel">
        <%= render "membership_card", offer: @my_offer %>
      </div>
    </div>
    <div class="col-12 col-lg-8">
      <div class="l-panel">
        <% if !user_signed_in? %>
          <h2>Sign in to Reserve Membership</h2>
          <%= render "sign_in_notice" %>
        <% else %>
          <h2>Reserve a New Membership</h2>
          <%= form_for(@reservation) do |form| %>
            <%# Render different form based on WORLDCON_CONTACT env var %>
            <%= render worldcon_contact_form, reservation_form: form %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>
