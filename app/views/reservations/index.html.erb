<h1>Review Memberships</h1>
<section class="l-section">
  <div class="row">
    <div class="col-12 col-md-12">
      <div class="l-panel">
        <% if !user_signed_in? %>
          <%= render "sign_in_notice" %>
        <% else %>
          <h2>
            My Memberships (<%= current_user.email %>)
          </h2>
          <p>You have <%= @my_purcahses.count %> memberships</p>

          <div class="card-columns">
            <% @my_purcahses.find_each(batch_size: 10) do |reservation| %>
              <div class="card <%= card_classes(reservation) %>">
                <div class="card-body">
                  <h5 class="card-title">
                    #<%= reservation.membership_number %>

                    <% if detail = reservation.active_claim.detail %>
                      <%= detail %>
                    <% end %>
                  </h5>

                  <p class="card-text">
                    <%= reservation.membership %> Membership
                  </p>

                  <% if reservation.paid? %>
                    <% UpgradeOffer.from(reservation.membership).each do |offer| %>
                      <p>
                        <%= upgrade_link(reservation, offer: offer) %><br>
                        <em><%= offer.link_description %></em>
                      </p>
                    <% end %>
                  <% else %>
                    <p>Reserved, but not fully paid</p>
                    <p><%= link_to "Make a payment", new_charge_url(reservation: reservation) %></p>
                  <% end %>

                  <p><%= link_to("Review or update details", reservation_path(reservation)) %></p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<% if support_signed_in? %>
  <section class="l-section">
    <div class="row">
      <div class="col-12 col-md-12">
        <div class="l-panel">
          <h2>Full Members List</h2>
          <p>
            This page is a kind of godmode. Be careful who you show this too, these details are private.
          </p>
          <table class="full-members-list table table-hover table-striped table-dark table-responsive-lg">
            <thead>
              <th>#</th>
              <th>Legal Name</th>
              <th>Preferred Name</th>
              <th>Email</th>
              <th>Membership</th>
            </thead>
            <tbody>
              <% Claim.active.eager_load(:user, :detail, reservation: :membership).each do |claim| %>
                <tr>
                  <td><%= claim.reservation.membership_number %></td>
                  <td><%= link_to(claim.detail&.legal_name, reservation_path(claim.reservation)) %></td>
                  <td><%= claim.detail&.preferred_name %></td>
                  <td><%= claim.user.email %></td>
                  <td><%= claim.reservation.membership %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
<% end %>
