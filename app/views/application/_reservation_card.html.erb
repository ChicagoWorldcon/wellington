<div class="card <%= card_classes(reservation) %>">
  <div class="card-body">
    <h5 class="card-title">
      #<%= reservation.membership_number %>

      <% if detail = reservation.active_claim.detail %>
        <%= detail %>
      <% end %>
    </h5>

    <p class="card-text">
      <%= reservation.membership %> Membership
    </p>

    <% if reservation.installment? %>
      <p>Reserved, but not fully paid</p>
      <p><%= amount_to_pay(reservation) %> NZD outstanding</p>
    <% end %>

    <% if reservation.paid? %>
      <p><%= t("rights.description") %></p>
      <% reservation.membership.rights.each do |membership_right| %>
        <p>
          <%= t(:description, scope: membership_right) %>
          <%=
            octicon("info",
              "height" => "15px",
              "aria-label" => "More information",
              "data-toggle" => "tooltip",
              "data-html" => "true",
              "data-placement" => "right",
              "title" => t(:layman, scope: membership_right),
            )
          %>
        </p>
      <% end %>
    <% end %>

    <% links.each do |link| %>
      <p><%= link %></p>
    <% end %>
  </div>
</div>
