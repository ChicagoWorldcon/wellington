<div class="card <%= card_classes(reservation) %>">
  <div class="card-body">
    <h5 class="card-title">
      #<%= reservation.membership_number %>

      <% if detail = reservation.active_claim.detail %>
        <%= detail %>
      <% end %>
    </h5>

    <p class="card-text">
      <%= reservation.membership %> Membership
    </p>

    <% if reservation.instalment? %>
      <p>Reserved, but not fully paid</p>
      <p><%= amount_to_pay(reservation) %></p>
    <% end %>

    <% if reservation.paid? %>
      <p><%= t("rights.description") %></p>
      <% reservation.membership.active_rights.each do |membership_right| %>
        <p><%= raw membership_right_description(membership_right, reservation) %></p>
      <% end %>
    <% end %>

    <%= yield %>
  </div>
</div>
