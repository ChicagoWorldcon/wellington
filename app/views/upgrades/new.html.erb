<h1>
  Confirm Upgrade #<%= @reservation.membership_number %>
  from <%= @my_offer.from_membership %>
  to <%= @my_offer.to_membership %>
</h1>

<div class="container text-center">
  <div class="row l-panel">
    <div class="col-md-12 col-lg-4 mb-3">
      <div class="card shadow-sm h-100">
        <%= render("reservation_card", reservation: @reservation) %>
      </div>
    </div>

    <div class="col-md-12 col-lg-4 mb-3">
      is getting upgraded to...
    </div>

    <div class="col-md-12 col-lg-4 mb-3">
      <div class="card shadow-sm h-100">
        <%= render("membership_card", offer: @my_offer) do  %>
          <%= link_to(
            @my_offer,
            reservation_upgrades_path(offer: @my_offer.hash),
            class: %w(btn btn-lg btn-block btn-primary),
            method: :post,
          ) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
