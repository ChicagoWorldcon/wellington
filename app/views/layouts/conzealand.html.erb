<html lang="en">
<head>
  <title>CoNZealand</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%# TODO move scripts to the bottom of <body> %>
  <script src="https://checkout.stripe.com/checkout.js"></script>

  <%= javascript_pack_tag "conzealand-app" %>
  <%= stylesheet_pack_tag "conzealand-styles", media: "all" %>

  <%=
    tag("link", {
      rel: "shortcut icon",
      type: "image/x-icon",
      href: resolve_path_to_image("media/packs/conzealand-favicon.ico"),
    })
  %>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="description" content="CoNZealand is a convention for science fiction enthusiasts.">
  <meta name="keywords" content="conzealand, science fiction, convention, meet up, sci-fi" />
</head>

<body class="<%= "api-test-keys" if $stripe_test_keys %>">
  <%# TODO Style this to flash or something dramatic %>
  <% if support_signed_in? %>
    <div class="alert alert-danger show fixed-top" role="alert">
      NOTICE: You are logged in as support
      <%= button_to(
        "Logout of Support (#{current_support.email})",
        destroy_support_session_path,
        action: :delete, method: :delete, class: "button"
      ) %>
    </div>
  <% end %>

  <header>
    <div class="container l-v-spacing" role="banner">
      <a href="<%= root_path %>" class="logo">
        <%=
          image_pack_tag(
            "media/packs/conzealand-logo.svg",
            alt: "CoNZealand - The 78th World Science Fiction Convention",
            class: "img-responsive"
          )
        %>
      </a>
    </div>

    <div class="container">
      <%= render "layouts/alerts" %>
    </div>

    <%= render "/layouts/menu" %>
  </header>

  <div class="l-main" role="main">
    <div class="container l-wrapper">
      <%= yield %>
    </div>
  </div>

  <footer role="contentinfo">
    <div class="container l-wrapper">
      <p>
        We outline how we use your personal information in our
        <a href="https://conzealand.nz/privacy-policy/" target="_blank" rel="noopener">Privacy Policy</a>
      </p>
      <p>
        By using our members area, you are agreeing to follow our
        <a href="https://conzealand.nz/about-conzealand/policies-and-expectations/" target="_blank" rel="noopener">Terms of Service</a>
      </p>
      <p>
        &copy; CoNZealand <%= Date.today.year %>.
        Contact <%= link_to $member_services_email, "mailto:#{$member_services_email}" %>
      </p>
    </div>
  </footer>
</body>
</html>
