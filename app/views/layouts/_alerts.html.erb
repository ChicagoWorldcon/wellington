  <p class="alert alert-primary alert-dismissible fade show" role="alert"><%= notice.html_safe %></p>
<% end %>

<% if alert.present? %>
  <p class="alert alert-warning alert-dismissible fade show" role="alert">Alert: <%= alert.html_safe %> </p>
<% end %>

<% if flash[:error].present? %>
  <p class="alert alert-danger alert-dismissible fade show" role="alert"><%= flash[:error] %></p>
<% end %>
